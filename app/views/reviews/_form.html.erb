<%= form_with model: review, url: review.persisted? ? review_path(review) : reviews_path, local: true, multiple: true, class: "new_parfait mt-4" do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="mb-3">
    <%= f.label :title, class: "must-form" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <%= render "image_form", f: f, review: review  %>

  <div class="mb-3">
    <%= f.label :body, class: "must-form" %>
    <%= f.text_area :body, class: "form-control", rows: "10", placeholder: 'レビューをお願いします' %>
  </div>

  <%= f.hidden_field :parfait_id, value: review.parfait_id %>

  <%# デフォルトのenterで送信する機能で送信されないためのダミー %>
  <%= tag.input type: 'submit', style: 'display:none', disabled: true %>
  <%= f.submit '登録', class: "btn btn-primary" %>
<% end %>