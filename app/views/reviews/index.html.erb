<div class="container pt-3">
  <div class="row">
    <% if @reviews.present? %>
      <%= render partial: 'review', collection: @reviews, as: :review, locals: { bookmark_counts: @bookmark_counts } %>
    <% else %>
      <div class="mb-3">レビューがありません</div>
    <% end %>
    <div class="p-2">
      <%= paginate @reviews, theme: 'bootstrap-5' %>
    </div>  
  </div>
</div>   