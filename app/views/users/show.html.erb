<% breadcrumb :user_profile, @user %>
<div class="show-wrapper">
  <div class="container show-page pt-3">
    <div class="py-4">
      <div class="col-md-10 offset-md-1">
        <h2 class="float-left mb-5"><%= t('.title') %></h2>
        <%= link_to t('defaults.edit'), edit_user_registration_path, class: 'btn btn-success float-right mb-2' %>
        <table class="table">
          <tr>
            <th scope="row"><%= User.human_attribute_name(:email) %></th>
            <td><%= @user.email %></td>
          </tr>
          <tr>
            <th scope="row"><%= User.human_attribute_name(:name) %></th>
            <td><%= @user.name %></td>
          </tr>
          <tr>
            <th scope="row"><%= User.human_attribute_name(:profile) %></th>
            <td><%= @user.profile %></td>
          </tr>

          <tr>
            <th scope="row"><%= User.human_attribute_name(:avatar) %></th>
              <% if @user.avatar.present? %>
                <td><%= image_tag @user.avatar, class: 'rounded-circle', size: '50x50' %></td>
              <% else %>
                <td><%= image_tag 'noimage.png', class: 'rounded-circle', size: '50x50' %></td>
              <% end %>   
          </tr>
          
        </table>
      </div>
    </div>
  </div>
</div>
