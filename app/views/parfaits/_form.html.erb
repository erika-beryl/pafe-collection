<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
      <h1>商品登録</h1>
      <%= form_with model: @parfait, class: "new_parfait" do |f| %>
        <div class="mb-3">
          <%= f.label :パフェ名 %>
          <%= f.text_field :name, class: "form-control" %>
        </div>
        <div class="mb-3">
          <%= f.label :商品紹介 %>
          <%= f.text_area :body, class: "form-control", rows: "10" %>
        </div>
        <%= f.submit nil, class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>