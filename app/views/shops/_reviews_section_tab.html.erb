<div class="container pt-3">
  <div class="row">
    <% if parfaits.present? %>
      <% @parfaits.each do |parfait| %>
        <% if parfait.reviews.present? %>
          <% parfait.reviews.each do |review| %>
            <div class="d-flex flex-row align-items-center py-3 border-top border-bottom">
              <div class="d-flex">
                <%= image_tag 'noimage.png', class: "card-img-left" %>
                <div class="card-body">
                  <h4 class="card-title">
                    <%= link_to parfait.name, parfait_path(parfait) %>
                  </h4>
                  <% if user_signed_in? %>
                    <div class='d-flex justify-content-end'>
                      <%= link_to '#', id: "button-edit-#{parfait.id}" do %>
                        <i class='bi bi-pencil-fill'></i>
                      <% end %>
                      <%= link_to '#', id: "button-delete-#{parfait.id}", data: { turbo_method: :delete, turbo_confirm: t('defaults.delete_confirm') } do %>
                        <i class="bi bi-trash-fill"></i>
                      <% end %>
                    </div>
                  <% end %>

                  <p>タイトル：<%= review.title %></p>
                  <p><%= link_to review.parfait.name, parfait_path(review.parfait) %></p>
                  <p><%= simple_format(review.body) %></p>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="mb-3">レビューがありません</div>
        <% end %>
      <% end %>  
    <% else %>
      <div class="mb-3">パフェの情報がありません</div>
    <% end %>
  </div>
</div>   